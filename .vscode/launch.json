    "version": "0.2.0",
    "configurations": [
        {
            "name": "heif-enc",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/examples/heif-enc",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/build/examples/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "ngiis-encode",
            "type": "cppdbg",
            "request": "launch",
            // "program": "${workspaceFolder}/build/examples/ngiis-encode",
